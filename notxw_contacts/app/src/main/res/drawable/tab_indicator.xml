<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_selected="false">
        <layer-list>
            <item android:drawable="@color/material_green_500" />
            <item android:drawable="@drawable/tab_unselected_pressed_example" />
        </layer-list>
    </item>
    <item android:state_pressed="false" android:state_selected="true">
        <layer-list>
            <item android:drawable="@color/material_green_700" />
            <item android:drawable="@drawable/tab_selected_example" />
        </layer-list>
    </item>

    <item android:drawable="@color/material_green_700" android:state_selected="false" />

</selector>